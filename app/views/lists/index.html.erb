<div class="banner">
   <h1>Save any kind of movies</h1>
   <p>Classic</p>
</div>
<div class="lists">
  <div class="list-header">
  <h1>My Lists</h1>
  <%= link_to "Create a new List", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="card-list">
    <% @lists.each do |list| %>
    <%= link_to list.name, list_path(list), class:"text-decoration-none" %>
    <% end %>
  </div>
</div>
